{{>head }}
<div class="w-full min-h-screen max-w-xl mx-auto py-20 px-10">
    <div class="flex items-end justify-between">
        <div class="w-fit">
            <h1 class="text-2xl font-semibold mb-5">Login</h1>
        </div>
        <div class="w-fit">
            {{#if messages.error }}
            <p class="text-red-600">Email or password is incorrect!!!</p>
            {{/if }}
        </div>
    </div>
    <form method="post" action="/login">
        <div class="w-full h-fit mb-4">
            <label for="email">Email</label>
            <input id="email" name="email" type="text" class="w-full h-fit py-2 px-4 rounded-xl bg-slate-900 outline-slate-800" placeholder="Johndoe@example.com" required>
        </div>
        <div class="w-full h-fit mb-4">
            <label for="password">Password</label>
            <input id="password" name="password" type="password" class="w-full h-fit py-2 px-4 rounded-xl bg-slate-900 outline-slate-800" placeholder="****" required>
        </div>
        <button class="w-full h-fit py-2 px-4 rounded-xl bg-blue-700 text-white mb-4 hover:bg-blue-800 active:scale-95 duration-75">Login</button>
    </form>
    <p>
        <span>New User? please </span>
        <a href="/register" class="text-blue-600">register here!</a>
    </p>
</div>
{{>foot }}